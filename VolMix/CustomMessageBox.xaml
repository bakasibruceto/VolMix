<Window x:Class="VolMix.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="200" Width="400" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="MessageTextBlock" Text="Are you sure you want to remove this item?" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="YesButton" Content="Yes" Width="75" Margin="10" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="No" Width="75" Margin="10" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>